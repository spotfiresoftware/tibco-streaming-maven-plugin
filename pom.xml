        <!-- 
            use mvn site -Puml to re-generate svg from source ( then commit )

            to create html docs in github pages :

            cd /tmp
            git clone https://github.com/spotfiresoftware/tibco-streaming-maven-plugin.git
            cd tibco-streaming-maven-plugin
            git checkout gh-page
            
            cd <plugin source/ep-maven
            mvn site:stage -DstagingDirectory=/tmp/<version>/ep-maven-plugin

            cd /tmp/tibco-streaming-maven-plugin
            git add <version>
            git commit <version>
            git push
        -->
        <profile>
            <id>uml</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.kryshchuk.maven.plugins</groupId>
                        <artifactId>umlet-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>create svg</id>
                                <goals>
                                    <goal>convert</goal>
                                </goals>
                                <configuration>
                                    <format>svg</format>
                                    <outputDirectory>src/site/resources/uml</outputDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

