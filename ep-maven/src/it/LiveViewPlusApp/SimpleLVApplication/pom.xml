<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <!-- vim: set tabstop=4 softtabstop=0 expandtab shiftwidth=4 smarttab : -->

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.tibco.test</groupId>
    <artifactId>SimpleLVApplication</artifactId>
    <packaging>ep-application</packaging>
    <version>@project.version@</version>
    <name>SimpleLVApplication</name>
    <description>Simple Application with a LiveView component</description>

    <!-- common definitions for this version of Streaming -->
    <parent>
        <groupId>com.tibco.ep.sb.parent</groupId>
        <artifactId>ep-application</artifactId>
        <version>@integration.test.sb.version@</version>
        <relativePath/>
    </parent>

    <properties>
        <cluster.name>simple_cluster</cluster.name>
        <integration.node.name>Node1</integration.node.name>

        <!-- Configure how long we will wait for application to start -->
        <max.wait.node.startup.duration>20</max.wait.node.startup.duration>
        <max.wait.node.startup.unit>minute</max.wait.node.startup.unit>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.tibco.ep</groupId>
                <artifactId>ep-maven-plugin</artifactId>
                <version>@project.version@</version>
                <extensions>true</extensions>
                <configuration>
                    <clusterName>${cluster.name}</clusterName>
                </configuration>
                <executions>

                    <execution>
                        <id>start-integration-node-app</id>
                        <phase>pre-integration-test</phase>
                        <goals><goal>start-nodes</goal></goals>

                        <configuration>
                            <nodes>
                                <node>${integration.node.name}</node>
                            </nodes>
                        </configuration>
                    </execution>

                    <execution>
                        <id>stop-integration-node-app</id>
                        <phase>post-integration-test</phase>
                        <goals><goal>stop-nodes</goal></goals>

                        <configuration>
                            <failOnStopError>false</failOnStopError>
                            <nodes>
                                <node>${integration.node.name}</node>
                            </nodes>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Wait for ${integration.node.name} to start</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target>
                                <waitfor maxwait="${max.wait.node.startup.duration}"
                                         maxwaitunit="${max.wait.node.startup.unit}"
                                         checkevery="500"
                                         timeoutproperty="atimeout">
                                    <resourcecontains
                                            resource="${project.build.directory}/test-nodes/${integration.node.name}.${cluster.name}/logs/default-engine-for-com.tibco.ldm.test.SimpleLV.log"
                                            substring="All tables have been loaded. LiveView is ready to accept client connections"/>
                                </waitfor>
                                <fail message="Node ${integration.node.name} failed to start in time (${max.wait.node.startup.duration} ${max.wait.node.startup.unit})">
                                    <condition>
                                        <isset property="atimeout"/>
                                    </condition>
                                </fail>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.tibco.ldm.test</groupId>
            <artifactId>SimpleLV</artifactId>
            <version>@project.version@</version>
            <type>ep-liveview-fragment</type>
        </dependency>
    </dependencies>
</project>
